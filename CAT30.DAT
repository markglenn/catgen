FUNCTION Erase$ (TheStr$)
		ddd% = INSTR(TheStr$, "~")
		WHILE ddd% > 0
			aff% = INSTR(Temp$, "~")
			TheTemp$ = LEFT$(Temp$, aff% - 1)
			Temp$ = RIGHT$(Temp$, LEN(Temp$) - 3)
			ddd% = INSTR(Temp$, "~")
		WEND

END FUNCTION

